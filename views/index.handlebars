<h1>Eat Da Burger!</h1>

<h2>Menu</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> partials/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>DEVOURED!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> partials/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger-name" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>