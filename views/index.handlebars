{{!-- container div --}}
<div class="container">
  {{!-- first row --}}
  <div class="row">
    {{!-- title column --}}
    <div class="col-12">

      <h1>Eat Da Burger!</h1>

    </div>
  </div>

  {{!-- second row --}}
  <div class="row menu-row">
    {{!-- menu column --}}
    <div class="col-6">
      <h2>Menu</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    {{!-- devoured column --}}
    <div class="col-6">
      <h2>DEVOURED!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

    {{!-- third row --}}
    <div class="row add-burger">
      {{!-- add burger column --}}
      <div class="col-12">
        <h2>Add a Burger</h2>

        <form class="create-form">
          <div class="form-group">
            <label for="burger-name">Burger Name:</label>
            <input type="text" id="burger-name" name="name">
          </div>

          <button type="submit" class="btn btn-warning">Add Burger</button>
        </form>
      </div>
    </div>
</div>